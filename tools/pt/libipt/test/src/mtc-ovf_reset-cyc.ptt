; Test MTC and CYC-based timing and OVF.
;
; Variant: calibration reset on OVF.
;
; opt:ptdump --time --time-delta
; opt:ptdump --mtc-freq 4 --cpuid-0x15.eax 1 --cpuid-0x15.ebx 4
;
; opt:ptxed --event:tick --event:time
; opt:ptxed --mtc-freq 4 --cpuid-0x15.eax 1 --cpuid-0x15.ebx 4

org 0x100000
bits 64

; @pt p0:  psb()
; @pt p1:  mode.exec(64bit)
; @pt p2:  fup(3: %l0)
; @pt p3:  tsc(0x1000)
; @pt p4:  tma(0x10, 0x40)
; @pt p5:  psbend()
l0: nop

; @pt p6:  mtc(0x2)
; @pt p7:  cyc(0x100)
; @pt p8:  mtc(0x3)

; @pt p9:  cyc(0x80)
; @pt p10: tnt(t)
l1: jne l3
l2: hlt

; @pt p11: cyc(0x80)
; @pt p12: mtc(0x4)

; @pt p13: ovf()
; @pt p14: fup(3: %l3)
l3: nop

; @pt p15: cyc(0x80)
; @pt p16: tnt(t)
l4: jne l6
l5: hlt

l6: nop
l7: hlt
; @pt p17: cyc(0x80)
; @pt p18: fup(1: %l7)
; @pt p19: tip.pgd(0: %l7)


