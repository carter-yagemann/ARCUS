; Test that a VMexit followed by a VMentry are decoded correctly.
;
; Variant: event tracing enabled
;

org 0x100000
bits 64

; @pt p0: psb()
; @pt p1: fup(3: %l0)
; @pt p2: mode.exec(64bit, if)
; @pt p3: psbend()
l0: nop

; @pt p4: evd(1: 0xf00baa)
; @pt p5: evd(2: 0)
; @pt p6: cfe(9: 14)
; @pt p7: fup(1: %l1)
; @pt p8: tip(3: %l5)
; ...
; @pt p9: cfe(7)
; @pt p10: tip(3: %l1)
l1: mov rax, [rbx]

; @pt p11: evd(2: 10)
; @pt p12: cfe(8)
; @pt p13: fup(1: %l2)
; @pt p14: tip(3: %l7)
; ...
; @pt p15: cfe(7)
; @pt p16: tip(3: %l3)
l2: cpuid
l3: nop

; @pt p17: fup(1: %l4)
; @pt p18: tip.pgd(0: %l4)
l4: hlt

l5: vmresume
l6: hlt

l7: vmresume
l8: hlt


